.header 
	background-color #283149
	height 50px
	position relative
	z-index 15
	// background-image url(./image/logoh.png)
	.logo
		position absolute
		left 0px
		width 220px
		text-align center
		img
			height 50px
	.backLogin
		position absolute
		right 20px
		color rgba(255,255,255,.7)
		top 25%
		font-size 14px
		cursor pointer
		.icon
			font-size 13px
			padding-right 4px
	.backLogin:hover
		color #fff
	.fullScreen
		position absolute
		top 25%
		color rgba(255,255,255,.7)
		cursor pointer
		right 240px
		.icon
			font-size 17px
		.icon:hover
			color #fff
	.lockScreen
		position absolute
		right 270px
		top 25%
		color rgba(255,255,255,.7)
		cursor pointer
		.icon
			font-size 17px
		.icon:hover
			color #fff
	.message
		position absolute
		right 300px
		top 22%
		color rgba(255,255,255,.7)
		cursor pointer
		.icon
			font-size 17px
		.icon:hover
			color #fff
		
			
		
	.userImg
		position absolute
		right 90px
		top 20%
		cursor pointer
		color rgba(255,255,255,.7)
		font-size 14px
		width 97px
		height 38px
		.content
			margin-bottom 5px
			.title
				width 47px
				height 20px
				text-align right
				font-size 13px
				outTextHide()
				
			.menuIcon
				width 16px
				height 24px
			.img
				width 34px
				height 28px
				text-align right
				img
					width 28px
					height 28px
					border-radius 50%
			.col
				display inline-block
				vertical-align middle
		.popup
			padding 3px 1px
			color #464c5b
			font-size 13px
			background-color #fff
			border-radius 5px
			box-shadow  0 1px 6px 2px rgba(0,0,0,.2)
			text-align center
			transition top .3s ease
			ul
				list-style none
				li
					padding 5px 0
					cursor pointer
				li:hover
					background-color #f8f8f9
		.popup:hover
			box-shadow  0 1px 6px 2px  #dcdee2
			
	.userImg:hover
		color #fff
	
			
	
		

.contentMain
	background-color #f8f8f9
	.mainLeft
		float left
		position relative
		z-index 10
		height calc(100vh - 50px)
		transition width .25s ease-in
	
		.menuController
			width 100%
			text-align center
			background-color #404b69
			color #aeb9c2
			padding 10px 0
			cursor pointer
		.menu
			
			height calc(100vh - 89px)
			background-color #515a6e
			
	.mainRight
		position relative
		z-index 5
		transition margin-left .25s ease-in
		.contentView
			height calc(100vh - 90px)
			background-color #EEEEEE
			overflow auto
			padding 10px
			

.contentMain:after  // 清除浮动
	 clear both
	 content ''
	 display block
	 width 0
	 height 0
	 visibility hidden
